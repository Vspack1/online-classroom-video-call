{
  "name": "online-classroom-tailwind",
  "version": "1.0.0",
  "description": "Online classroom application like Zoom/Google Meet",
  "main": "server.js",
  "scripts": {
    "build": "tailwindcss -i ./input.css -o ./output.css --minify",
    "watch": "tailwindcss -i ./input.css -o ./output.css --watch",
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "nodemon": "^3.0.1"
  }
}
